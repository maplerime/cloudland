<domain type='xen' id='7'>
  <name>VM_ID</name>
  <memory unit='KiB'>VM_MEM</memory>
  <currentMemory unit='KiB'>VM_MEM</currentMemory>
  <vcpu placement='static'>VM_CPU</vcpu>
  <metadata>
    <cloudland:vm xmlns:cloudland="https://cloudland.raksmart.com/metadata">
      <cloudland:instance_id>INSTANCE_UUID</cloudland:instance_id>
    </cloudland:vm>
  </metadata>
  <bootloader>pygrub</bootloader>
  <os>
    <type arch='x86_64' machine='xenpv'>linux</type>
  </os>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw'/>
      <source file='VM_IMG'/>
      <backingStore/>
      <target dev='xvda' bus='xen'/>
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='phy' type='raw'/>
      <source file='VM_META'/>
      <target dev='xvdh' bus='xen'/>
      <readonly/>
    </disk>
    <console type='pty' tty='/dev/pts/0'>
      <source path='/dev/pts/0'/>
      <target type='xen' port='0'/>
    </console>
    <input type='mouse' bus='xen'/>
    <input type='keyboard' bus='xen'/>
    <graphics type='vnc' port='5903' autoport='yes' keymap='en-us'/>
    <video>
      <model type='xen' heads='1'/>
    </video>
  </devices>
</domain>

