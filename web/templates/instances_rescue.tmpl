{{template "_head" .}}
<div class="admin user">

    <div class="ui container">

        <div class="ui grid">

        {{template "_left" .}}
			<div class="user signup">
				<div class="ui middle very relaxed page grid">
					<div class="" >
						<form class="ui form" action="{{.Link}}" method="post">
							<h3 class="ui top attached header">
								{{ .i18n.Tr "OS Rescue"}}
							</h3>
							<div class="ui attached segment">
                                                                <div class="inline field">
                                                                    <label for="rescue_image">{{.i18n.Tr "Rescue Image"}}</label>
                                                                    <div class="ui selection dropdown">
                                                                      <input id="rescue_image" name="rescue_image" type="hidden">
                                                                      <i class="dropdown icon"></i>
                                                                      <div class="default text">{{.i18n.Tr "Rescue Image"}}</div>
                                                                      <div class="menu">
                                                                        {{ range .RescueImages }}
                                                                        {{ if eq .Status "available" }}
                                                                               <div class="item" data-value={{.ID}} data-text={{.Name}}>
                                                                               {{.Name}}
                                                                               </div>
                                                                        {{ end }}
                                                                        {{ end }}
                                                                      </div>
                                                                    </div>
                                                                </div>
                                                                <div class="required inline field">
                                                                    <label>{{.i18n.Tr "Root Password"}}</label>
                                                                    <input type="password" id="rootpasswd"  name="rootpasswd" >
                                                                </div>
								<div class="inline field">
									<label></label>
									<button class="ui green button">{{.i18n.Tr "OS Rescue"}}</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{template "_footer" .}}
