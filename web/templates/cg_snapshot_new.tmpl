{{template "_head" .}}
<div class="admin user">
    <div class="ui container">
        <div class="ui grid">
            {{template "_left" .}}
            <div class="user signup">
                <div class="ui middle very relaxed page grid">
                    <div class="">
                        <form class="ui form" action="{{.Link}}" method="post">
                            <h3 class="ui top attached header">
                                {{.i18n.Tr "Create_CG_Snapshot"}}: {{.CG.Name}}
                            </h3>
                            <div class="ui attached segment">
                                <div class="inline field">
                                    <label>{{.i18n.Tr "Consistency_Group"}}</label>
                                    <span>{{.CG.Name}} ({{.CG.UUID}})</span>
                                </div>
                                <div class="inline field">
                                    <label>{{.i18n.Tr "Volumes_Count"}}</label>
                                    <span>{{.VolumeCount}}</span>
                                </div>
                                <div class="required inline field">
                                    <label for="name">{{.i18n.Tr "Snapshot_Name"}}</label>
                                    <input id="name" name="name" autofocus required>
                                </div>
                                <div class="inline field">
                                    <label for="description">{{.i18n.Tr "Description"}}</label>
                                    <input id="description" name="description">
                                </div>
                                <div class="inline field">
                                    <label></label>
                                    <button class="ui green button">{{.i18n.Tr "Create_Snapshot"}}</button>
                                    <a class="ui button" href="/cgroups/{{.CG.ID}}/snapshots">{{.i18n.Tr "Cancel"}}</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{template "_footer" .}}
