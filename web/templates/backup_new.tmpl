{{template "_head" .}}
<div class="admin user">

    <div class="ui container">

        <div class="ui grid">

        {{template "_left" .}}
			<div class="user signup">
				<div class="ui middle very relaxed page grid">
					<div class="" >
						<form class="ui form" action="{{.Link}}" method="post">
							<h3 class="ui top attached header">
								{{.i18n.Tr "Create New Volume Backup/Snapshot"}}
							</h3>
							<div class="ui attached segment">
								<div class="required inline field">
									<label for="name">{{.i18n.Tr "Name"}}</label>
									<input id="name" name="name" autofocus required>
								</div>
								<div class="required inline field">
									<label for="backup_type">{{.i18n.Tr "Backup/Snapshot"}}</label>
									<select name="backup_type" id="backup_type" class="ui selection dropdown">
                                         <option value="snapshot" selected>Snapshot</option>
                                         <option value="backup">Backup</option>
                                    </select>
								</div>
								<div class="required inline field">
									<label for="volume">{{.i18n.Tr "Volume"}}</label>
									<div class="ui selection dropdown">
									  <input id="volume" name="volume" type="hidden">
									  <i class="dropdown icon"></i>
									  <div class="default text">{{.i18n.Tr "Volume"}}</div>
									  <div class="menu">
										{{ range .Volumes }}
										<div class="item" data-value={{.ID}} data-text={{.Name}}>
										  {{.ID}}-{{.Name}}
										</div>
										{{ end }}
									  </div>
									</div>
								</div>
								<div class="inline field">
									<label for="storage_pool">{{.i18n.Tr "Storage Pool (Only for Backup)"}}</label>
									<div class="ui selection dropdown">
									  <input id="storage_pool" name="storage_pool" type="hidden">
									  <i class="dropdown icon"></i>
									  <div class="default text">{{.i18n.Tr "Storage Pool"}}</div>
									  <div class="menu">
										{{ range .Pools }}
										<div class="item" data-value={{.Value}} data-text={{.Name}}>
										  {{.Name}}
										</div>
										{{ end }}
									  </div>
									</div>
								</div>								
								<div class="inline field">
									<label></label>
									<button class="ui green button">{{.i18n.Tr "Create New Volume Backup/Snapshot"}}</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{template "_footer" .}}

