{{template "_head" .}}
<div class="admin user">
    <div class="ui container">
        <div class="ui grid">
            {{template "_left" .}}
            <div class="user signup">
                <div class="ui middle very relaxed page grid">
                    <div class="">
                        <form class="ui form" action="/consistency_groups/{{.CG.ID}}" method="post">
                            <h3 class="ui top attached header">
                                {{.i18n.Tr "Edit_CG"}}: {{.CG.Name}}
                            </h3>
                            <div class="ui attached segment">
                                <div class="inline field">
                                    <label>{{.i18n.Tr "UUID"}}</label>
                                    <span>{{.CG.UUID}}</span>
                                </div>
                                <div class="required inline field">
                                    <label for="name">{{.i18n.Tr "Name"}}</label>
                                    <input id="name" name="name" value="{{.CG.Name}}" autofocus required>
                                </div>
                                <div class="inline field">
                                    <label for="description">{{.i18n.Tr "Description"}}</label>
                                    <input id="description" name="description" value="{{.CG.Description}}">
                                </div>
                                <div class="inline field">
                                    <label>{{.i18n.Tr "Status"}}</label>
                                    <span>{{.CG.Status}}</span>
                                </div>
                                <div class="inline field">
                                    <label>{{.i18n.Tr "Pool"}}</label>
                                    <span>{{.CG.PoolID}}</span>
                                </div>
                                <div class="inline field">
                                    <label></label>
                                    <button class="ui green button">{{.i18n.Tr "Update"}}</button>
                                    <a class="ui button" href="/consistency_groups/{{.CG.ID}}">{{.i18n.Tr "Cancel"}}</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{template "_footer" .}}
