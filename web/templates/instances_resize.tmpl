{{template "_head" .}}
<div class="admin user">

    <div class="ui container">

        <div class="ui grid">

        {{template "_left" .}}
			<div class="user signup">
				<div class="ui middle very relaxed page grid">
					<div class="" >
						<form class="ui form" action="{{.Link}}" method="post">
							<h3 class="ui top attached header">
								{{ .i18n.Tr "ResizeInstance"}}
							</h3>
							<div class="ui attached segment">
                                <div class="inline field">
                                    <label for="cpu">{{.i18n.Tr "Cpu"}}</label>
                                    <input type="number" id="cpu"  name="cpu" autocomplete="off">
                                </div>
                                <div class="inline field">
                                    <label for="memory">{{.i18n.Tr "Memory"}}(M)</label>
                                    <input type="number" id="memory"  name="memory" autocomplete="off">
                                </div>
								<div class="inline field">
									<label></label>
									<button class="ui green button">{{.i18n.Tr "ResizeInstance"}}</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{template "_footer" .}}
