{{template "_head" .}}
    <div class="admin user">
        <div class="ui container">
            <div class="ui grid">
                {{template "_left" .}}
                <div class="twelve wide column content">
                    <h4 class="ui top attached header">
                        {{.i18n.Tr "CG_Snapshots"}}: {{.CG.Name}} ({{.i18n.Tr "Total"}}: {{.Total}})
                        <div class="ui right">
                            <a class="ui green tiny button" href="{{.Link}}/new">{{.i18n.Tr "Create"}}</a>
                            <a class="ui button" href="/consistency_groups/{{.CG.ID}}">{{.i18n.Tr "Back"}}</a>
                        </div>
                    </h4>
                    <div class="ui unstackable attached table segment">
                        <table class="ui unstackable very basic striped table">
                            <thead>
                                <tr>
                                    {{ if $.IsAdmin }}
                                    <th>{{.i18n.Tr "ID"}}</th>
                                    {{ end }}
                                    <th>{{.i18n.Tr "Name"}}</th>
                                    <th>{{.i18n.Tr "Status"}}</th>
                                    <th>{{.i18n.Tr "Size"}} (G)</th>
                                    <th>{{.i18n.Tr "Running_Task"}}</th>
                                    <th>{{.i18n.Tr "Created"}}</th>
                                    <th>{{.i18n.Tr "Delete"}}</th>
                                    <th>{{.i18n.Tr "Restore"}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ $Link := .Link }}
                                {{ $CGLink := .CGLink }}
                                {{ range .Snapshots }}
                                <tr>
                                    {{ if $.IsAdmin }}
                                    <td>{{.ID}}</td>
                                    {{ end }}
                                    <td>{{.Name}}</td>
                                    <td>{{.Status}}</td>
                                    <td>{{.Size}}</td>
                                    {{ if .Task }}
                                    <td><a href="/tasks/{{.Task.ID}}">{{.Task.Name}}</a></td>
                                    {{ else }}
                                    <td></td>
                                    {{ end }}
                                    <td>{{.CreatedAt}}</td>
                                    <td>
                                        <div class="delete-button" data-url="{{$Link}}/{{.ID}}" data-id="{{.ID}}"
                                             {{if not .CanDelete}}style="opacity: 0.3; pointer-events: none;"{{end}}>
                                            <i class="dark purple trash alternate outline icon"></i>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="restore-button" data-id="{{.ID}}" data-name="{{.Name}}"
                                             {{if ne .Status "available"}}style="opacity: 0.3; pointer-events: none;"{{end}}>
                                            <i class="dark blue undo alternate icon"></i>
                                        </div>
                                    </td>
                                </tr>
                                {{ end }}
                            </tbody>
                        </table>
                    </div>
                    <!-- Pagination -->
                    <div class="ui attached segment">
                        {{ if .Pages}}
                        <div class="ui pagination menu">
                            {{ range $index, $element := .Pages }}
                            <a class="active item">
                                <a href="{{$Link}}?offset={{$element.Offset}}">{{ $element.Number }}</a>
                            </a>
                            {{ end }}
                        </div>
                        {{ end }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Modal -->
    <div class="ui small basic delete modal">
        <div class="ui icon header">
            <i class="trash icon"></i>
            {{.i18n.Tr "CG_Snapshot_Deletion"}}
        </div>
        <div class="content">
            <p>{{.i18n.Tr "CG_Snapshot_Deletion_Confirm"}}</p>
        </div>
        {{template "_delete_modal_actions" .}}
    </div>
    <!-- Restore Modal -->
    <div class="ui small basic restore modal">
        <div class="ui icon header">
            <i class="undo alternate icon"></i>
            {{.i18n.Tr "CG_Snapshot_Restore"}}
        </div>
        <div class="content">
            <p>{{.i18n.Tr "CG_Snapshot_Restore_Confirm"}} <span id="restore-snapshot-name"></span>?</p>
            <form class="ui form" id="restore-form" method="post" action="{{.CGLink}}/restore">
                <input type="hidden" name="snapshot_id" id="restore-snapshot-id">
            </form>
        </div>
        <div class="actions">
            <div class="ui negative button">{{.i18n.Tr "Cancel"}}</div>
            <div class="ui positive button">{{.i18n.Tr "OK"}}</div>
        </div>
    </div>
{{template "_footer" .}}
<script>
$('.restore-button').on('click', function() {
    $('#restore-snapshot-id').val($(this).data('id'));
    $('#restore-snapshot-name').text($(this).data('name'));
    $('.ui.small.basic.restore.modal').modal('show');
});
$('.ui.restore.modal .ui.positive.button').on('click', function() {
    $('#restore-form').submit();
});
</script>
