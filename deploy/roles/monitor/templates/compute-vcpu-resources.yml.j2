groups:
- name: compute-vcpu-resources
  rules:
  # vcpu alert by Zone
  - alert: Zone_HighVCPUUsage
    expr: |
      (
        (
          sum by (zone, region) (cloudland_hypervisor_cpu_total)
          - sum by (zone, region) (cloudland_hypervisor_cpu)
        )
        / sum by (zone, region) (cloudland_hypervisor_cpu_total) * 100
      ) > {{ vcpu_usage_threshold }}
    for: {{ for_duration }}
    labels:
      severity: warning
      node_type: compute
      alert_type: "node-vcpu"
      zone: "{{ $labels.zone }}"
      region: "{{ $labels.region }}"
    annotations:
      summary: "Zone {{ $labels.zone }} high vCPU usage"
      description: "Zone {{ $labels.zone }} in region {{ $labels.region }} vCPU usage is {{ $value | humanize }}%, exceeds threshold {{ vcpu_usage_threshold }}%"

