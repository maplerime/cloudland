server {
    listen 80;
    server_name _;

    # Use monitor IP
    set $prometheus_grafana_ip {{ hostvars[groups['monitor'][0]]['ansible_host'] }};

    # Grafana UI
    location /grafana/ {
        proxy_pass http://{{ prometheus_grafana_ip }}:3000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Prometheus
    location /prometheus/ {
        proxy_pass http://{{ prometheus_grafana_ip }}:{{ monitor_monitor_access_port }}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}